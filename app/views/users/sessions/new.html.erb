<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Sign in</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= bootstrap_flash %>
      <%= simple_form_for(resource,html: { novalidate: true }, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="ui form segment">
          <div class="field">
            <label>Email</label>
            <div class="ui left labeled icon input">
               <%= f.input_field :email, required: false, autofocus: true, as: :string %>
              <i class="mail icon"></i>
            </div>
          </div>
          <div class="field">
            <label>Password</label>
            <div class="ui left labeled icon input">
              <%= f.input_field :password, required: false %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.button :submit, "Sign in", :class => 'ui blue submit button"' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
